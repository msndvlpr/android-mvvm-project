<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="6dp">

    <View
        android:id="@+id/viwSeparator"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginTop="6dp"
        android:background="@color/gray_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgDoc"
            android:layout_width="wrap_content"
            android:contentDescription="@string/document"
            android:paddingTop="4dp"
            android:layout_height="38dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/viwSeparator"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_document" />

        <TextView
            android:id="@+id/txtDocName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/viwSeparator"
            app:layout_constraintStart_toEndOf="@id/imgDoc"
            android:textSize="14sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:contentDescription="@string/chevron"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:paddingTop="6dp"
                app:layout_constraintTop_toBottomOf="@+id/viwSeparator"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/chevron" />


</androidx.constraintlayout.widget.ConstraintLayout>